<%= render 'layouts/header' %>
<div class="container center">
  <br>
  <div class="row center">
    <h2>Sign In</h2>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="row">
        <div class="input-field col l6 offset-l3">
          <%= f.text_field :email, class: 'validate' %><br>
          <%= f.label :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l6 offset-l3">
          <%= f.password_field :password, class: 'validate' %><br>
          <%= f.label :passwordl %>
        </div>
      </div>
      <%= f.submit "Sign in", class: "btn btn-medium btn-primary" %>
    <% end %>
    <br>
    <%= link_to 'Sign in with Facebook', '/auth/facebook', class: "btn btn-medium btn-primary" %>
    <br><br>
    <div class="row">
      Don't have account?
      <%= link_to "Sign Up", sign_up_path %>
    </div>
  </div>
</div>
